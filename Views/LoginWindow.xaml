<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="DrLab.Desktop.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid>
        <!-- Background with gradient -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FF0F4C75" Offset="0"/>
                <GradientStop Color="#FF3282B8" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Main login container -->
        <Border Background="White" 
                CornerRadius="12" 
                Padding="40"
                MaxWidth="400"
                MaxHeight="500"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                BorderBrush="#FFE0E0E0"
                BorderThickness="1">

            <Border.Shadow>
                <ThemeShadow />
            </Border.Shadow>

            <StackPanel Spacing="24">
                <!-- Logo/Title -->
                <StackPanel HorizontalAlignment="Center" Spacing="8">
                    <TextBlock Text="ðŸ§ª" 
                               FontSize="48" 
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="DrLab LIMS" 
                               FontSize="28" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Center"
                               Foreground="#FF0F4C75"/>
                    <TextBlock Text="Laboratory Information Management System" 
                               FontSize="14" 
                               HorizontalAlignment="Center"
                               Foreground="#FF666666"/>
                </StackPanel>

                <!-- Login Form -->
                <StackPanel Spacing="16">
                    <!-- Username -->
                    <StackPanel Spacing="4">
                        <TextBlock Text="Username" 
                                   FontWeight="SemiBold"
                                   Foreground="#FF333333"/>
                        <TextBox x:Name="UsernameTextBox" 
                                 PlaceholderText="Enter your username"
                                 Height="40"
                                 Background="White"
                                 BorderBrush="#FFCCCCCC"
                                 BorderThickness="1"
                                 Foreground="Black"
                                 FontSize="14"
                                 Padding="8,0,8,0">
                            <TextBox.PlaceholderForeground>
                                <SolidColorBrush Color="#FF999999"/>
                            </TextBox.PlaceholderForeground>
                        </TextBox>
                    </StackPanel>

                    <!-- Password -->
                    <StackPanel Spacing="4">
                        <TextBlock Text="Password" 
                                   FontWeight="SemiBold"
                                   Foreground="#FF333333"/>
                        <PasswordBox x:Name="PasswordBox" 
                                     Height="40"
                                     Background="White"
                                     BorderBrush="#FFCCCCCC"
                                     BorderThickness="1"
                                     Foreground="Black"
                                     FontSize="14"
                                     Padding="8,0,8,0"/>
                    </StackPanel>

                    <!-- Login Button -->
                    <Button x:Name="LoginButton" 
                            Content="Sign In" 
                            HorizontalAlignment="Stretch" 
                            Height="44"
                            Background="#FF0F4C75"
                            Foreground="White"
                            FontWeight="SemiBold"
                            FontSize="16"
                            Click="LoginButton_Click"/>

                    <!-- Status/Error Message -->
                    <TextBlock x:Name="StatusTextBlock" 
                               HorizontalAlignment="Center"
                               Foreground="Red"
                               Visibility="Collapsed"/>
                </StackPanel>

                <!-- Footer -->
                <TextBlock Text="Version 1.0 | Â© 2024 DrLab Systems - CyberNash Technologies" 
                           FontSize="12" 
                           HorizontalAlignment="Center"
                           Foreground="#FF999999"
                           Margin="0,16,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>