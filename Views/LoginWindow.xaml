<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="DrLab.Desktop.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid>
        <!-- Animated Background -->
        <Grid.Background>
            <RadialGradientBrush Center="0.3,0.3" RadiusX="1.2" RadiusY="1.2">
                <GradientStop Color="#FF0A2A5C" Offset="0"/>
                <GradientStop Color="#FF1E3A5F" Offset="0.3"/>
                <GradientStop Color="#FF2B4A73" Offset="0.6"/>
                <GradientStop Color="#FF3C6B9D" Offset="1"/>
            </RadialGradientBrush>
        </Grid.Background>

        <!-- Floating Particles Effect -->
        <Canvas Name="ParticlesCanvas">
            <Ellipse Width="4" Height="4" Fill="#30FFFFFF" Canvas.Left="100" Canvas.Top="150"/>
            <Ellipse Width="3" Height="3" Fill="#20FFFFFF" Canvas.Left="300" Canvas.Top="200"/>
            <Ellipse Width="5" Height="5" Fill="#40FFFFFF" Canvas.Left="500" Canvas.Top="100"/>
            <Ellipse Width="2" Height="2" Fill="#50FFFFFF" Canvas.Left="200" Canvas.Top="300"/>
            <Ellipse Width="4" Height="4" Fill="#25FFFFFF" Canvas.Left="700" Canvas.Top="250"/>
        </Canvas>

        <!-- Main Login Container -->
        <Border Name="LoginContainer" 
                MaxWidth="450"
                MaxHeight="600"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                CornerRadius="20"
                Padding="50"
                BorderThickness="1">

            <!-- Glassmorphism Background -->
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#40FFFFFF" Offset="0"/>
                    <GradientStop Color="#20FFFFFF" Offset="0.5"/>
                    <GradientStop Color="#30FFFFFF" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#60FFFFFF" Offset="0"/>
                    <GradientStop Color="#30FFFFFF" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>

            <Border.Shadow>
                <ThemeShadow />
            </Border.Shadow>

            <StackPanel Spacing="32">
                <!-- Logo/Title with Glow -->
                <StackPanel HorizontalAlignment="Center" Spacing="12">
                    <TextBlock Name="LogoIcon"
                               Text="ðŸ§ª" 
                               FontSize="64" 
                               HorizontalAlignment="Center"/>

                    <TextBlock Text="DrLab LIMS" 
                               FontSize="32" 
                               FontWeight="Light" 
                               HorizontalAlignment="Center"
                               Foreground="White"/>

                    <TextBlock Text="Laboratory Information Management System" 
                               FontSize="14" 
                               HorizontalAlignment="Center"
                               Foreground="#B0FFFFFF"
                               FontWeight="Light"/>
                </StackPanel>

                <!-- Login Form -->
                <StackPanel Spacing="20">
                    <!-- Username -->
                    <StackPanel Spacing="8">
                        <TextBlock Text="Username" 
                                   FontWeight="Medium"
                                   Foreground="White"
                                   FontSize="14"/>
                        <TextBox x:Name="UsernameTextBox" 
                                 PlaceholderText="Enter your username"
                                 Height="48"
                                 Background="#20FFFFFF"
                                 BorderBrush="#40FFFFFF"
                                 BorderThickness="1"
                                 CornerRadius="8"
                                 Foreground="White"
                                 FontSize="14"
                                 Padding="12,0,12,0"
                                 PlaceholderForeground="#80FFFFFF"/>
                    </StackPanel>

                    <!-- Password -->
                    <StackPanel Spacing="8">
                        <TextBlock Text="Password" 
                                   FontWeight="Medium"
                                   Foreground="White"
                                   FontSize="14"/>
                        <PasswordBox x:Name="PasswordBox" 
                                     PlaceholderText="Enter your password"
                                     Height="48"
                                     Background="#20FFFFFF"
                                     BorderBrush="#40FFFFFF"
                                     BorderThickness="1"
                                     CornerRadius="8"
                                     Foreground="White"
                                     FontSize="14"
                                     Padding="12,0,12,0"/>
                    </StackPanel>

                    <!-- Login Button -->
                    <Button x:Name="LoginButton" 
                            Content="Sign In" 
                            HorizontalAlignment="Stretch" 
                            Height="52"
                            FontSize="16"
                            FontWeight="SemiBold"
                            CornerRadius="8"
                            Foreground="White"
                            Margin="0,8,0,0"
                            Click="LoginButton_Click">
                        <Button.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#80FFFFFF" Offset="0"/>
                                <GradientStop Color="#40FFFFFF" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                        <Button.BorderBrush>
                            <SolidColorBrush Color="#60FFFFFF"/>
                        </Button.BorderBrush>
                    </Button>

                    <!-- Status/Error Message -->
                    <TextBlock x:Name="StatusTextBlock" 
                               HorizontalAlignment="Center"
                               Foreground="#FFFF6B6B"
                               FontWeight="Medium"
                               Visibility="Collapsed"/>
                </StackPanel>

                <!-- Footer -->
                <TextBlock Text="Version 1.0 | Â© 2024 DrLab Systems - CyberNash Technologies" 
                           FontSize="11" 
                           HorizontalAlignment="Center"
                           Foreground="#80FFFFFF"
                           FontWeight="Light"
                           Margin="0,16,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>