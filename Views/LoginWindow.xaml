<Window x:Class="DrLab.Desktop.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid>
        <!-- Main Background Gradient -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#0F0F23" Offset="0"/>
                <GradientStop Color="#1A1A2E" Offset="0.5"/>
                <GradientStop Color="#16213E" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Animated Background Particles -->
        <Canvas x:Name="ParticlesCanvas" IsHitTestVisible="False">
            <!-- Floating particles for subtle animation -->
            <Ellipse Width="4" Height="4" Fill="#20FFFFFF" Canvas.Left="100" Canvas.Top="150"/>
            <Ellipse Width="6" Height="6" Fill="#15FFFFFF" Canvas.Left="300" Canvas.Top="250"/>
            <Ellipse Width="3" Height="3" Fill="#25FFFFFF" Canvas.Left="500" Canvas.Top="180"/>
            <Ellipse Width="5" Height="5" Fill="#18FFFFFF" Canvas.Left="700" Canvas.Top="320"/>
            <Ellipse Width="4" Height="4" Fill="#22FFFFFF" Canvas.Left="150" Canvas.Top="400"/>
            <Ellipse Width="7" Height="7" Fill="#12FFFFFF" Canvas.Left="800" Canvas.Top="120"/>
        </Canvas>

        <!-- Main Content Container -->
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
            <Border x:Name="LoginContainer"
                    Width="420"
                    Height="520"
                    CornerRadius="16"
                    BorderThickness="1">
                <Border.BorderBrush>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#40FFFFFF" Offset="0"/>
                        <GradientStop Color="#20FFFFFF" Offset="0.5"/>
                        <GradientStop Color="#30FFFFFF" Offset="1"/>
                    </LinearGradientBrush>
                </Border.BorderBrush>

                <!-- Glass Effect Background -->
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#15FFFFFF" Offset="0"/>
                        <GradientStop Color="#08FFFFFF" Offset="0.5"/>
                        <GradientStop Color="#12FFFFFF" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <!-- Content -->
                <StackPanel Margin="40" VerticalAlignment="Center" Spacing="24">

                    <!-- Logo and Title Section -->
                    <StackPanel HorizontalAlignment="Center" Spacing="16">
                        <!-- Logo Icon -->
                        <Border x:Name="LogoIcon"
                                Width="64"
                                Height="64"
                                CornerRadius="32"
                                HorizontalAlignment="Center">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#4F46E5" Offset="0"/>
                                    <GradientStop Color="#7C3AED" Offset="0.5"/>
                                    <GradientStop Color="#EC4899" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <FontIcon FontFamily="Segoe MDL2 Assets" 
                                      Glyph="&#xE7BA;" 
                                      FontSize="28" 
                                      Foreground="White"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>

                        <!-- Title -->
                        <StackPanel HorizontalAlignment="Center" Spacing="4">
                            <TextBlock Text="DrLab LIMS" 
                                       FontSize="28" 
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center"
                                       Foreground="White"/>
                            <TextBlock Text="Laboratory Information Management System" 
                                       FontSize="13" 
                                       HorizontalAlignment="Center"
                                       Foreground="#B0FFFFFF"
                                       FontWeight="Light"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Login Form -->
                    <StackPanel Spacing="20">

                        <!-- Username Field -->
                        <StackPanel Spacing="8">
                            <TextBlock Text="Username" 
                                       FontSize="14"
                                       FontWeight="Medium"
                                       Foreground="#E0FFFFFF"/>
                            <Border CornerRadius="8" 
                                    Background="#10FFFFFF"
                                    BorderThickness="1"
                                    BorderBrush="#30FFFFFF">
                                <TextBox x:Name="UsernameTextBox" 
                                         PlaceholderText="Enter your username"
                                         Height="44"
                                         Background="Transparent"
                                         BorderThickness="0"
                                         Foreground="White"
                                         FontSize="14"
                                         Padding="16,0,16,0"
                                         PlaceholderForeground="#80FFFFFF"/>
                            </Border>
                        </StackPanel>

                        <!-- Password Field -->
                        <StackPanel Spacing="8">
                            <TextBlock Text="Password" 
                                       FontSize="14"
                                       FontWeight="Medium"
                                       Foreground="#E0FFFFFF"/>
                            <Border CornerRadius="8" 
                                    Background="#10FFFFFF"
                                    BorderThickness="1"
                                    BorderBrush="#30FFFFFF">
                                <PasswordBox x:Name="PasswordBox" 
                                             PlaceholderText="Enter your password"
                                             Height="44"
                                             Background="Transparent"
                                             BorderThickness="0"
                                             Foreground="White"
                                             FontSize="14"
                                             Padding="16,0,16,0"/>
                            </Border>
                        </StackPanel>

                        <!-- Login Button -->
                        <Button x:Name="LoginButton" 
                                Height="48"
                                CornerRadius="8"
                                HorizontalAlignment="Stretch"
                                Margin="0,8,0,0"
                                FontSize="15"
                                FontWeight="SemiBold"
                                Foreground="White"
                                Click="LoginButton_Click">
                            <Button.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#4F46E5" Offset="0"/>
                                    <GradientStop Color="#7C3AED" Offset="0.5"/>
                                    <GradientStop Color="#EC4899" Offset="1"/>
                                </LinearGradientBrush>
                            </Button.Background>
                            <Button.Content>
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon FontFamily="Segoe MDL2 Assets" 
                                              Glyph="&#xE8AF;" 
                                              FontSize="16"/>
                                    <TextBlock Text="Sign In" FontSize="15"/>
                                </StackPanel>
                            </Button.Content>
                        </Button>

                        <!-- Status Message -->
                        <Border x:Name="StatusContainer" 
                                Visibility="Collapsed"
                                CornerRadius="6"
                                Background="#20FF4444"
                                BorderBrush="#60FF4444"
                                BorderThickness="1"
                                Padding="12,8">
                            <TextBlock x:Name="StatusTextBlock" 
                                       HorizontalAlignment="Center"
                                       Foreground="#FFFF6B6B"
                                       FontSize="13"
                                       FontWeight="Medium"/>
                        </Border>
                    </StackPanel>

                    <!-- Footer -->
                    <StackPanel HorizontalAlignment="Center" Spacing="4" Margin="0,16,0,0">
                        <TextBlock Text="Version 1.0" 
                                   FontSize="11" 
                                   HorizontalAlignment="Center"
                                   Foreground="#60FFFFFF"
                                   FontWeight="Light"/>
                        <TextBlock Text="Â© 2024 DrLab Systems - CyberNash Technologies" 
                                   FontSize="10" 
                                   HorizontalAlignment="Center"
                                   Foreground="#40FFFFFF"
                                   FontWeight="Light"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Loading Overlay -->
        <Grid x:Name="LoadingOverlay" 
              Background="#80000000" 
              Visibility="Collapsed">
            <StackPanel HorizontalAlignment="Center" 
                        VerticalAlignment="Center" 
                        Spacing="16">
                <ProgressRing IsActive="True" 
                              Width="40" 
                              Height="40" 
                              Foreground="#4F46E5"/>
                <TextBlock Text="Signing in..." 
                           FontSize="14" 
                           Foreground="White" 
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>