<Page x:Class="DrLab.Desktop.Views.Pages.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ScrollViewer>
        <StackPanel Spacing="24" Margin="0,0,0,40">

            <!-- Welcome Section -->
            <Border CornerRadius="12" 
                    Background="#15FFFFFF"
                    BorderBrush="#30FFFFFF"
                    BorderThickness="1"
                    Padding="24">
                <StackPanel Spacing="12">
                    <TextBlock Text="Welcome back!" 
                               FontSize="24" 
                               FontWeight="SemiBold"
                               Foreground="White"/>
                    <TextBlock x:Name="WelcomeText"
                               Text="Good morning, Tinashe! Here's what's happening in the lab today." 
                               FontSize="14" 
                               Foreground="#B0FFFFFF"/>
                </StackPanel>
            </Border>

            <!-- Quick Stats -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Pending Samples -->
                <Border Grid.Column="0" 
                        CornerRadius="12" 
                        Background="#15FFFFFF"
                        BorderBrush="#30FFFFFF"
                        BorderThickness="1"
                        Padding="20"
                        Margin="0,0,8,0">
                    <StackPanel Spacing="8">
                        <FontIcon FontFamily="Segoe MDL2 Assets" 
                                  Glyph="&#xE82F;" 
                                  FontSize="24" 
                                  Foreground="#4F46E5"/>
                        <TextBlock Text="23" 
                                   FontSize="28" 
                                   FontWeight="Bold"
                                   Foreground="White"/>
                        <TextBlock Text="Pending Samples" 
                                   FontSize="12" 
                                   Foreground="#B0FFFFFF"/>
                    </StackPanel>
                </Border>

                <!-- Active Tests -->
                <Border Grid.Column="1" 
                        CornerRadius="12" 
                        Background="#15FFFFFF"
                        BorderBrush="#30FFFFFF"
                        BorderThickness="1"
                        Padding="20"
                        Margin="4,0">
                    <StackPanel Spacing="8">
                        <FontIcon FontFamily="Segoe MDL2 Assets" 
                                  Glyph="&#xE8A5;" 
                                  FontSize="24" 
                                  Foreground="#7C3AED"/>
                        <TextBlock Text="47" 
                                   FontSize="28" 
                                   FontWeight="Bold"
                                   Foreground="White"/>
                        <TextBlock Text="Active Tests" 
                                   FontSize="12" 
                                   Foreground="#B0FFFFFF"/>
                    </StackPanel>
                </Border>

                <!-- Results Pending Review -->
                <Border Grid.Column="2" 
                        CornerRadius="12" 
                        Background="#15FFFFFF"
                        BorderBrush="#30FFFFFF"
                        BorderThickness="1"
                        Padding="20"
                        Margin="4,0">
                    <StackPanel Spacing="8">
                        <FontIcon FontFamily="Segoe MDL2 Assets" 
                                  Glyph="&#xE8F4;" 
                                  FontSize="24" 
                                  Foreground="#EC4899"/>
                        <TextBlock Text="12" 
                                   FontSize="28" 
                                   FontWeight="Bold"
                                   Foreground="White"/>
                        <TextBlock Text="Pending Review" 
                                   FontSize="12" 
                                   Foreground="#B0FFFFFF"/>
                    </StackPanel>
                </Border>

                <!-- QC Issues -->
                <Border Grid.Column="3" 
                        CornerRadius="12" 
                        Background="#15FFFFFF"
                        BorderBrush="#30FFFFFF"
                        BorderThickness="1"
                        Padding="20"
                        Margin="8,0,0,0">
                    <StackPanel Spacing="8">
                        <FontIcon FontFamily="Segoe MDL2 Assets" 
                                  Glyph="&#xE814;" 
                                  FontSize="24" 
                                  Foreground="#F59E0B"/>
                        <TextBlock Text="3" 
                                   FontSize="28" 
                                   FontWeight="Bold"
                                   Foreground="White"/>
                        <TextBlock Text="QC Issues" 
                                   FontSize="12" 
                                   Foreground="#B0FFFFFF"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Recent Activity -->
            <Border CornerRadius="12" 
                    Background="#15FFFFFF"
                    BorderBrush="#30FFFFFF"
                    BorderThickness="1"
                    Padding="24">
                <StackPanel Spacing="16">
                    <TextBlock Text="Recent Activity" 
                               FontSize="18" 
                               FontWeight="SemiBold"
                               Foreground="White"/>

                    <!-- Activity Items -->
                    <StackPanel Spacing="12">
                        <!-- Activity Item 1 -->
                        <Border CornerRadius="8" 
                                Background="#10FFFFFF"
                                Padding="16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Ellipse Grid.Column="0" 
                                         Width="8" Height="8" 
                                         Fill="#4F46E5" 
                                         VerticalAlignment="Top"
                                         Margin="0,6,16,0"/>

                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Sample WTS-2025-001 received from City Council" 
                                               FontSize="14" 
                                               FontWeight="Medium"
                                               Foreground="White"/>
                                    <TextBlock Text="Microbiology testing requested • Assigned to Chemistry Dept" 
                                               FontSize="12" 
                                               Foreground="#80FFFFFF"/>
                                </StackPanel>

                                <TextBlock Grid.Column="2" 
                                           Text="2 min ago" 
                                           FontSize="12" 
                                           Foreground="#60FFFFFF"
                                           VerticalAlignment="Top"/>
                            </Grid>
                        </Border>

                        <!-- Activity Item 2 -->
                        <Border CornerRadius="8" 
                                Background="#10FFFFFF"
                                Padding="16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Ellipse Grid.Column="0" 
                                         Width="8" Height="8" 
                                         Fill="#7C3AED" 
                                         VerticalAlignment="Top"
                                         Margin="0,6,16,0"/>

                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Results approved for batch BTH-240622-001" 
                                               FontSize="14" 
                                               FontWeight="Medium"
                                               Foreground="White"/>
                                    <TextBlock Text="Approved by Dr. Sarah Johnson • 8 samples completed" 
                                               FontSize="12" 
                                               Foreground="#80FFFFFF"/>
                                </StackPanel>

                                <TextBlock Grid.Column="2" 
                                           Text="15 min ago" 
                                           FontSize="12" 
                                           Foreground="#60FFFFFF"
                                           VerticalAlignment="Top"/>
                            </Grid>
                        </Border>

                        <!-- Activity Item 3 -->
                        <Border CornerRadius="8" 
                                Background="#10FFFFFF"
                                Padding="16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Ellipse Grid.Column="0" 
                                         Width="8" Height="8" 
                                         Fill="#F59E0B" 
                                         VerticalAlignment="Top"
                                         Margin="0,6,16,0"/>

                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="QC failure detected in batch BTH-240622-003" 
                                               FontSize="14" 
                                               FontWeight="Medium"
                                               Foreground="White"/>
                                    <TextBlock Text="High control out of range • Investigation required" 
                                               FontSize="12" 
                                               Foreground="#80FFFFFF"/>
                                </StackPanel>

                                <TextBlock Grid.Column="2" 
                                           Text="1 hour ago" 
                                           FontSize="12" 
                                           Foreground="#60FFFFFF"
                                           VerticalAlignment="Top"/>
                            </Grid>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Quick Actions -->
            <Border CornerRadius="12" 
                    Background="#15FFFFFF"
                    BorderBrush="#30FFFFFF"
                    BorderThickness="1"
                    Padding="24">
                <StackPanel Spacing="16">
                    <TextBlock Text="Quick Actions" 
                               FontSize="18" 
                               FontWeight="SemiBold"
                               Foreground="White"/>

                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <!-- New Sample Button -->
                        <Button Height="48" 
                                CornerRadius="8"
                                Padding="16,0"
                                Background="#4F46E5"
                                BorderBrush="Transparent">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon FontFamily="Segoe MDL2 Assets" 
                                          Glyph="&#xE710;" 
                                          FontSize="16" 
                                          Foreground="White"/>
                                <TextBlock Text="New Sample" 
                                           FontSize="14" 
                                           FontWeight="Medium"
                                           Foreground="White"/>
                            </StackPanel>
                        </Button>

                        <!-- Enter Results Button -->
                        <Button Height="48" 
                                CornerRadius="8"
                                Padding="16,0"
                                Background="#15FFFFFF"
                                BorderBrush="#30FFFFFF"
                                BorderThickness="1">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon FontFamily="Segoe MDL2 Assets" 
                                          Glyph="&#xE8A5;" 
                                          FontSize="16" 
                                          Foreground="White"/>
                                <TextBlock Text="Enter Results" 
                                           FontSize="14" 
                                           FontWeight="Medium"
                                           Foreground="White"/>
                            </StackPanel>
                        </Button>

                        <!-- Generate Report Button -->
                        <Button Height="48" 
                                CornerRadius="8"
                                Padding="16,0"
                                Background="#15FFFFFF"
                                BorderBrush="#30FFFFFF"
                                BorderThickness="1">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon FontFamily="Segoe MDL2 Assets" 
                                          Glyph="&#xE8A3;" 
                                          FontSize="16" 
                                          Foreground="White"/>
                                <TextBlock Text="Generate Report" 
                                           FontSize="14" 
                                           FontWeight="Medium"
                                           Foreground="White"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>