<!-- Views/Pages/MessagingPage.xaml -->
<Page x:Class="DrLab.Desktop.Views.Pages.MessagingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:messaging="using:DrLab.Desktop.Views.Messaging"
      mc:Ignorable="d"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <!-- Converters -->
        <messaging:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <messaging:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
        <messaging:MessageAlignmentConverter x:Key="MessageAlignmentConverter"/>

        <!-- Message Item Template -->
        <DataTemplate x:Key="MessageItemTemplate" x:DataType="messaging:MessageModel">
            <Grid Margin="0,4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left spacer for sent messages -->
                <Border Grid.Column="0" 
                        Width="80"
                        Visibility="{x:Bind IsSentByCurrentUser, Converter={StaticResource BoolToVisibilityConverter}}"/>

                <!-- Message content -->
                <Border Grid.Column="1"
                        Background="{x:Bind IsSentByCurrentUser, Converter={StaticResource MessageBackgroundConverter}}"
                        CornerRadius="16"
                        Padding="16,8"
                        Margin="8,2"
                        MaxWidth="400">

                    <StackPanel>
                        <!-- Sender name for group chats -->
                        <TextBlock Text="{x:Bind SenderName}"
                                   FontSize="12"
                                   FontWeight="SemiBold"
                                   Foreground="{ThemeResource SystemColorGrayTextBrush}"
                                   Margin="0,0,0,4"
                                   Visibility="{x:Bind ShowSenderName, Converter={StaticResource BoolToVisibilityConverter}}"/>

                        <!-- Reply indicator -->
                        <Border Background="{ThemeResource SystemColorGrayTextBrush}"
                                CornerRadius="8"
                                Padding="8,4"
                                Margin="0,0,0,8"
                                Opacity="0.7"
                                Visibility="{x:Bind IsReply, Converter={StaticResource BoolToVisibilityConverter}}">
                            <TextBlock Text="{x:Bind ReplyToMessage.Content}"
                                       FontSize="12"
                                       MaxLines="2"
                                       TextTrimming="CharacterEllipsis"/>
                        </Border>

                        <!-- Message content -->
                        <TextBlock Text="{x:Bind Content}"
                                   FontSize="14"
                                   TextWrapping="Wrap"
                                   Foreground="{x:Bind IsSentByCurrentUser, Converter={StaticResource MessageForegroundConverter}}"
                                   Visibility="{x:Bind IsFileMessage, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>

                        <!-- File message content -->
                        <StackPanel Orientation="Horizontal"
                                    Visibility="{x:Bind IsFileMessage, Converter={StaticResource BoolToVisibilityConverter}}">
                            <FontIcon FontFamily="Segoe MDL2 Assets" 
                                      Glyph="&#xE8A5;" 
                                      FontSize="16"
                                      Margin="0,0,8,0"/>
                            <TextBlock Text="{x:Bind Content}"
                                       FontSize="14"
                                       Foreground="{x:Bind IsSentByCurrentUser, Converter={StaticResource MessageForegroundConverter}}"/>
                        </StackPanel>

                        <!-- Timestamp -->
                        <TextBlock Text="{x:Bind TimestampFormatted}"
                                   FontSize="11"
                                   Foreground="{ThemeResource SystemColorGrayTextBrush}"
                                   HorizontalAlignment="Right"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Right spacer for received messages -->
                <Border Grid.Column="2" 
                        Width="80"
                        Visibility="{x:Bind IsSentByCurrentUser, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
            </Grid>
        </DataTemplate>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320" MinWidth="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Conversations Panel -->
        <Border Grid.Column="0"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="0,0,1,0">
            <messaging:ConversationListPanel x:Name="ConversationListPanel"/>
        </Border>

        <!-- Messages Panel -->
        <Grid Grid.Column="1">
            <!-- No conversation selected state -->
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Spacing="16"
                        Visibility="{x:Bind ViewModel.HasActiveConversation, Converter={StaticResource InverseBoolToVisibilityConverter}, Mode=OneWay}">
                <FontIcon FontFamily="Segoe MDL2 Assets" 
                          Glyph="&#xE8BD;" 
                          FontSize="64"
                          Foreground="{ThemeResource SystemColorGrayTextBrush}"/>
                <TextBlock Text="Select a conversation to start messaging"
                           FontSize="16"
                           Foreground="{ThemeResource SystemColorGrayTextBrush}"
                           HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- Messages view -->
            <messaging:MessageView x:Name="MessageView"
                                   Visibility="{x:Bind ViewModel.HasActiveConversation, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}"/>
        </Grid>

        <!-- Connection status indicator -->
        <Border Grid.ColumnSpan="2"
                Background="{ThemeResource SystemFillColorCriticalBrush}"
                Padding="12,8"
                VerticalAlignment="Top"
                Visibility="{x:Bind ViewModel.IsConnected, Converter={StaticResource InverseBoolToVisibilityConverter}, Mode=OneWay}">
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center"
                        Spacing="8">
                <FontIcon FontFamily="Segoe MDL2 Assets" 
                          Glyph="&#xE783;" 
                          FontSize="16"
                          Foreground="White"/>
                <TextBlock Text="Disconnected from messaging server"
                           FontSize="14"
                           Foreground="White"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>