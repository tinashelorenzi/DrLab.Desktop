<Page x:Class="DrLab.Desktop.Views.Pages.SamplesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header with Actions -->
        <Border Grid.Row="0" 
                CornerRadius="12" 
                Background="#15FFFFFF"
                BorderBrush="#30FFFFFF"
                BorderThickness="1"
                Padding="24"
                Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Search and Filters -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="12">
                    <TextBox x:Name="SearchBox"
                             PlaceholderText="Search samples..."
                             Width="300"
                             Height="36"
                             Background="#10FFFFFF"
                             BorderBrush="#30FFFFFF"
                             BorderThickness="1"
                             CornerRadius="6"
                             Foreground="White"
                             Padding="12,0"/>

                    <ComboBox x:Name="StatusFilter"
                              PlaceholderText="All Status"
                              Width="140"
                              Height="36"
                              Background="#10FFFFFF"
                              BorderBrush="#30FFFFFF"
                              BorderThickness="1"
                              CornerRadius="6"
                              Foreground="White">
                        <ComboBoxItem Content="All Status"/>
                        <ComboBoxItem Content="Received"/>
                        <ComboBoxItem Content="In Progress"/>
                        <ComboBoxItem Content="Complete"/>
                        <ComboBoxItem Content="On Hold"/>
                    </ComboBox>

                    <ComboBox x:Name="DepartmentFilter"
                              PlaceholderText="All Departments"
                              Width="140"
                              Height="36"
                              Background="#10FFFFFF"
                              BorderBrush="#30FFFFFF"
                              BorderThickness="1"
                              CornerRadius="6"
                              Foreground="White">
                        <ComboBoxItem Content="All Departments"/>
                        <ComboBoxItem Content="Chemistry"/>
                        <ComboBoxItem Content="Microbiology"/>
                        <ComboBoxItem Content="Metals"/>
                    </ComboBox>
                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="12">
                    <Button x:Name="NewSampleButton"
                            Height="36"
                            CornerRadius="6"
                            Padding="16,0"
                            Background="#4F46E5"
                            BorderBrush="Transparent"
                            Foreground="White"
                            Click="NewSampleButton_Click">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon FontFamily="Segoe MDL2 Assets" 
                                      Glyph="&#xE710;" 
                                      FontSize="14"/>
                            <TextBlock Text="New Sample" FontSize="14"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="ImportButton"
                            Height="36"
                            CornerRadius="6"
                            Padding="12,0"
                            Background="#15FFFFFF"
                            BorderBrush="#30FFFFFF"
                            BorderThickness="1"
                            Foreground="White">
                        <FontIcon FontFamily="Segoe MDL2 Assets" 
                                  Glyph="&#xE8B5;" 
                                  FontSize="14"/>
                    </Button>

                    <Button x:Name="ExportButton"
                            Height="36"
                            CornerRadius="6"
                            Padding="12,0"
                            Background="#15FFFFFF"
                            BorderBrush="#30FFFFFF"
                            BorderThickness="1"
                            Foreground="White">
                        <FontIcon FontFamily="Segoe MDL2 Assets" 
                                  Glyph="&#xE8B6;" 
                                  FontSize="14"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Samples List -->
        <Border Grid.Row="1" 
                CornerRadius="12" 
                Background="#15FFFFFF"
                BorderBrush="#30FFFFFF"
                BorderThickness="1">
            <ScrollViewer>
                <StackPanel Spacing="1" Margin="24">
                    <!-- Header Row -->
                    <Border Background="#10FFFFFF" 
                            CornerRadius="6,6,0,0" 
                            Padding="16,12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="140"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="160"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="140"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="Sample ID" FontWeight="SemiBold" FontSize="12" Foreground="#E0FFFFFF"/>
                            <TextBlock Grid.Column="1" Text="Client" FontWeight="SemiBold" FontSize="12" Foreground="#E0FFFFFF"/>
                            <TextBlock Grid.Column="2" Text="Type" FontWeight="SemiBold" FontSize="12" Foreground="#E0FFFFFF"/>
                            <TextBlock Grid.Column="3" Text="Status" FontWeight="SemiBold" FontSize="12" Foreground="#E0FFFFFF"/>
                            <TextBlock Grid.Column="4" Text="Department" FontWeight="SemiBold" FontSize="12" Foreground="#E0FFFFFF"/>
                            <TextBlock Grid.Column="5" Text="Received" FontWeight="SemiBold" FontSize="12" Foreground="#E0FFFFFF"/>
                            <TextBlock Grid.Column="6" Text="Actions" FontWeight="SemiBold" FontSize="12" Foreground="#E0FFFFFF"/>
                        </Grid>
                    </Border>

                    <!-- Sample Rows -->
                    <!-- Sample 1 -->
                    <Border Background="#08FFFFFF" 
                            Padding="16,12"
                            BorderBrush="#10FFFFFF"
                            BorderThickness="0,1,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="140"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="160"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="140"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="WTS-2025-001" FontSize="13" Foreground="White" FontFamily="Consolas"/>
                            <TextBlock Grid.Column="1" Text="City Council" FontSize="13" Foreground="#E0FFFFFF"/>
                            <TextBlock Grid.Column="2" Text="Drinking Water" FontSize="13" Foreground="#E0FFFFFF"/>
                            <Border Grid.Column="3" 
                                    Background="#4F46E5" 
                                    CornerRadius="12" 
                                    Padding="8,4" 
                                    HorizontalAlignment="Left">
                                <TextBlock Text="Received" FontSize="11" Foreground="White" FontWeight="Medium"/>
                            </Border>
                            <TextBlock Grid.Column="4" Text="Chemistry" FontSize="13" Foreground="#E0FFFFFF"/>
                            <TextBlock Grid.Column="5" Text="2 min ago" FontSize="13" Foreground="#B0FFFFFF"/>
                            <StackPanel Grid.Column="6" Orientation="Horizontal" Spacing="8">
                                <Button Width="32" Height="32" 
                                        CornerRadius="16"
                                        Background="#15FFFFFF"
                                        BorderBrush="#30FFFFFF"
                                        BorderThickness="1">
                                    <FontIcon FontFamily="Segoe MDL2 Assets" 
                                              Glyph="&#xE70F;" 
                                              FontSize="12" 
                                              Foreground="White"/>
                                </Button>
                                <Button Width="32" Height="32" 
                                        CornerRadius="16"
                                        Background="#15FFFFFF"
                                        BorderBrush="#30FFFFFF"
                                        BorderThickness="1">
                                    <FontIcon FontFamily="Segoe MDL2 Assets" 
                                              Glyph="&#xE8A5;" 
                                              FontSize="12" 
                                              Foreground="White"/>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Sample 2 -->
                    <Border Background="#08FFFFFF" 
                            Padding="16,12"
                            BorderBrush="#10FFFFFF"
                            BorderThickness="0,1,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="140"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="160"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="140"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="WTS-2025-002" FontSize="13" Foreground="White" FontFamily="Consolas"/>
                            <TextBlock Grid.Column="1" Text="Mining Corp Ltd" FontSize="13" Foreground="#E0FFFFFF"/>
                            <TextBlock Grid.Column="2" Text="Industrial Water" FontSize="13" Foreground="#E0FFFFFF"/>
                            <Border Grid.Column="3" 
                                    Background="#7C3AED" 
                                    CornerRadius="12" 
                                    Padding="8,4" 
                                    HorizontalAlignment="Left">
                                <TextBlock Text="In Progress" FontSize="11" Foreground="White" FontWeight="Medium"/>
                            </Border>
                            <TextBlock Grid.Column="4" Text="Metals" FontSize="13" Foreground="#E0FFFFFF"/>
                            <TextBlock Grid.Column="5" Text="1 hour ago" FontSize="13" Foreground="#B0FFFFFF"/>
                            <StackPanel Grid.Column="6" Orientation="Horizontal" Spacing="8">
                                <Button Width="32" Height="32" 
                                        CornerRadius="16"
                                        Background="#15FFFFFF"
                                        BorderBrush="#30FFFFFF"
                                        BorderThickness="1">
                                    <FontIcon FontFamily="Segoe MDL2 Assets" 
                                              Glyph="&#xE70F;" 
                                              FontSize="12" 
                                              Foreground="White"/>
                                </Button>
                                <Button Width="32" Height="32" 
                                        CornerRadius="16"
                                        Background="#15FFFFFF"
                                        BorderBrush="#30FFFFFF"
                                        BorderThickness="1">
                                    <FontIcon FontFamily="Segoe MDL2 Assets" 
                                              Glyph="&#xE8A5;" 
                                              FontSize="12" 
                                              Foreground="White"/>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Sample 3 -->
                    <Border Background="#08FFFFFF" 
                            Padding="16,12"
                            BorderBrush="#10FFFFFF"
                            BorderThickness="0,1,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="140"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="160"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="140"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="WTS-2025-003" FontSize="13" Foreground="White" FontFamily="Consolas"/>
                            <TextBlock Grid.Column="1" Text="Hospital Group" FontSize="13" Foreground="#E0FFFFFF"/>
                            <TextBlock Grid.Column="2" Text="Wastewater" FontSize="13" Foreground="#E0FFFFFF"/>
                            <Border Grid.Column="3" 
                                    Background="#10B981" 
                                    CornerRadius="12" 
                                    Padding="8,4" 
                                    HorizontalAlignment="Left">
                                <TextBlock Text="Complete" FontSize="11" Foreground="White" FontWeight="Medium"/>
                            </Border>
                            <TextBlock Grid.Column="4" Text="Microbiology" FontSize="13" Foreground="#E0FFFFFF"/>
                            <TextBlock Grid.Column="5" Text="2 hours ago" FontSize="13" Foreground="#B0FFFFFF"/>
                            <StackPanel Grid.Column="6" Orientation="Horizontal" Spacing="8">
                                <Button Width="32" Height="32" 
                                        CornerRadius="16"
                                        Background="#15FFFFFF"
                                        BorderBrush="#30FFFFFF"
                                        BorderThickness="1">
                                    <FontIcon FontFamily="Segoe MDL2 Assets" 
                                              Glyph="&#xE70F;" 
                                              FontSize="12" 
                                              Foreground="White"/>
                                </Button>
                                <Button Width="32" Height="32" 
                                        CornerRadius="16"
                                        Background="#15FFFFFF"
                                        BorderBrush="#30FFFFFF"
                                        BorderThickness="1">
                                    <FontIcon FontFamily="Segoe MDL2 Assets" 
                                              Glyph="&#xE8A3;" 
                                              FontSize="12" 
                                              Foreground="White"/>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Page>